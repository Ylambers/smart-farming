{% extends '::base.html.twig' %}

{% block content %}
<div class="container top-container">
    <h1>Rankings list</h1>

    <table class="table  table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Upvoteamount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ranking in rankings %}
            <tr>
                <td>{{ ranking.title }}</td>
                <td>{{ ranking.description }}</td>
                <td>{{ ranking.upvoteAmount }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ranking_edit', { 'id': ranking.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ranking_new') }}">Create a new ranking</a>
        </li>
    </ul>
</div>
{% endblock %}
