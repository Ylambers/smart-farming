{% extends '::base.html.twig' %}

{% block content %}
<div class="container top-container">
    <h1>Vragen</h1>

    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"> Filter op catogorieen </button>
        <ul class="dropdown-menu">
            {% for cat in category %}
                    <li>
                        <a href="{{ path('question_search_on_key', { 'id': cat.id }) }}">{{ cat.title }}</a>
                    </li>
            {% endfor %}
        </ul>
    </div>

    <table class="table  table-striped table-hover">
        <thead>
            <tr>
                <th>Votes</th>
                <th>Title</th>
                <th>Dateposted</th>
                <th>Solved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.votes }}</td>
                <td><a href="{{ path('question_show', { 'id': question.id }) }}">{{ question.title }}</a></td>
                <td>{% if question.datePosted %}{{ question.datePosted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if question.solved %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('question_show', { 'id': question.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('question_edit', { 'id': question.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topic_new') }}">Create a new question</a>
        </li>
    </ul>
</div>
{% endblock %}
