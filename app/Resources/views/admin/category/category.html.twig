{% extends 'admin/index.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Category</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            <div class="col-md-6 scroll-container">
                {% for content in data %}
                    <h3>{{ content.name }}</h3>
                    <a class="btn btn-default" href="{{ path('category_edit', {'id': content.id}) }}" role="button">Edit</a>
                    <a class="btn btn-danger" href="{{ path('category_delete', {'id': content.id}) }}" role="button">Delete</a>
                    <hr />
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}