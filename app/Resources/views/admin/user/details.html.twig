{% extends 'admin/index.html.twig' %}

{% block content %}
    <div class="container">
        <h1>User Profile</h1>

        <table class="table  table-striped table-hover">
            <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of birth</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Mobile number</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Country</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.dateOfBirth|date("d:m:Y")}}</td>
                    <td>{{ user.user.email }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.mobileNumber }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.zipCode }}</td>
                    <td>{{ user.city }}</td>
                    <td>{{ user.country }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}