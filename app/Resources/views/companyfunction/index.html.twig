{% extends '::base.html.twig' %}

{% block content %}
<div class="container top-container">
    <h1>Companyfunctions list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for companyFunction in companyFunctions %}
            <tr>

                <td>{{ companyFunction.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('companyfunction_show', { 'id': companyFunction.id }) }}">Bekijk details</a>
                        </li>
                        <li>
                            <a href="{{ path('companyfunction_edit', { 'id': companyFunction.id }) }}">Bewerken</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('companyfunction_new') }}">Create a new companyFunction</a>
        </li>
    </ul>
</div>
{% endblock %}
