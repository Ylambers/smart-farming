{% extends '::base.html.twig' %}

{% block content %}
<div class="container top-container">
    <h1>Bekijk uw bedrijven</h1>

    <table class="table  table-striped table-hover">

    <thead>
            <tr>
                <th>Titel</th>
                <th>Beschrijving</th>
                <th>Website</th>
                <th>Kvk</th>
                <th>Opties</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.title }}</td>
                <td>{{ company.description }}</td>
                <td>{{ company.websiteUrl }}</td>
                <td>{{ company.kvk }}</td>
                <td>

                <a href="{{ path('company_show', { 'id': company.id }) }}" class="btn btn-default">Bekijk</a>

                <a href="{{ path('company_edit', { 'id': company.id }) }}" class="btn btn-default">Bewerk</a>

                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{ path('admin_accept_company', { 'id': company.id }) }}" class="btn btn-default">Accepteer bedrijf</a>

                {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
            <a href="{{ path('company_new') }}"class="btn btn-default">Maak een nieuw bedrijf aan</a>
    </ul>
</div>
{% endblock %}
