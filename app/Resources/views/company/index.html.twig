{% extends '::base.html.twig' %}

{% block content %}
<div class="container top-container">
    <h1>Bedrijven</h1>

    <table class="table  table-striped table-hover">

    <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Websiteurl</th>
                <th>Kvk</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.id }}</a></td>
                <td>{{ company.title }}</td>
                <td>{{ company.description }}</td>
                <td>{{ company.websiteUrl }}</td>
                <td>{{ company.kvk }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('company_show', { 'id': company.id }) }}">Bekijk</a>
                        </li>
                        <li>
                            <a href="{{ path('company_show', { 'id': company.id }) }}">Verwijder</a>
                        </li>
                        <li>
                            <a href="{{ path('company_edit', { 'id': company.id }) }}">Bewerk</a>
                        </li>


                        <li>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <a href="{{ path('admin_accept_company', { 'id': company.id }) }}">Accepteer bedrijf</a>

                            {% endif %}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
            <a href="{{ path('company_new') }}">Maak een nieuw bedrijf aan</a>
    </ul>
</div>
{% endblock %}
