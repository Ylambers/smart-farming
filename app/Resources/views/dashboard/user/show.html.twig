{% extends '::base.html.twig' %}

{% block content %}

    <br />
    <div class="container">
        <h1>Gebruikers</h1>
        <table class="table  table-striped table-hover">
            <thead>
            <tr>
                <th>Gebruikersnaam</th>
                <th>Email</th>
                <th>Actief</th>
                <th>Laatste login</th>
                <th>Rol</th>
                <th>Persoon gegevens</th>
                <th>Bewerken</th>
            </tr>
            </thead>
            <tbody>
                {% for item in user %}
                    <tr>
                        <td>{{ item.username }}</td>
                        <td>{{ item.email }}</td>
                        {% if item.enabled == 1 %}
                            <td>Active</td>
                        {% else %}
                            <td>Non active</td>
                        {% endif %}
                        <td>{{ item.lastLogin|date("d/m/Y:H:I:s") }}</td>
                        <td>{{ item.roles|join(', ') }}</td>
                        <td>
                            <a class="btn btn-default" href="{{ path('show_user_details', {'id': item.id}) }}" role="button">Bekijken</a>
                        </td>
                        <td>
                            <a class="btn btn-default" href="{{ path('edit_user_details', {'id': item.id}) }}" role="button">Bewerken</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}