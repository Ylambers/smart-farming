{% extends '::base.html.twig' %}

{% block content %}
    <div class="container top-container">
        <h1>Gebruikers profiel</h1>
        <table class="table  table-striped table-hover">
            <thead>
            <tr>
                <th>Voornaam</th>
                <th>Achternaam</th>
                <th>Geboortedatum</th>
                <th>Rank</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.dateOfBirth|date('d F Y') }}</td>
                    <td>{{ user.ranking.upvoteAmount}}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}